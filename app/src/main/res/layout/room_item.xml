<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:layout_margin="8dp">
    <TextView
        android:id="@+id/title_roomName"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="房间名："
        android:textSize="22sp"
        android:textColor="#000"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/roomName"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/title_roomName"
        android:gravity="center"
        android:text="有个房间"
        android:textSize="20sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/title_OwnerName"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_below="@id/title_roomName"
        android:text="房主："
        android:textSize="18sp"
        android:textColor="#000"
        android:paddingStart="50dp"/>
    <TextView
        android:id="@+id/ownerName"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/title_OwnerName"
        android:layout_below="@id/title_roomName"
        android:gravity="center"
        android:text="一风游侠"
        android:textSize="16sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/seat"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="2/3"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/roomState"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="可加入"
        android:textSize="16sp"
        android:layout_below="@id/seat"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
